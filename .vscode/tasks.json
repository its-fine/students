{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/code/Students.WebApi/Students.WebApi.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "docs",
            "command": "docfx",
            "type": "process",
            "args": [
                "${workspaceFolder}/docs/docfx.json",
                "--serve",
                "-p 7500"
            ],
            "problemMatcher": []
        }
    ]
}